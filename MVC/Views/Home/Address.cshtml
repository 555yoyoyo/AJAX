@{
    ViewData["Title"] = "Address";
}
<article class="blog-post">
    <h2 class="display-5 link-body-emphasis mb-1">Address</h2>
<h1></h1>
<select id="selectCity">
</select>
<select id="selectDistricts">
</select>
</article>
